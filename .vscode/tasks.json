{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cpp.exe build active file",
			"command": "C:\\cygwin64\\bin\\cpp.exe",
			"args": [
				"-g",
				"-std=c++17",
				"-I./include",
				"-L./lib",
				"src/\\*.cpp",
				"src/glad.c",
				"-lglfw3dll",
				"-o",
				"${workspaceFolder}/myprogram.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\cygwin64\\bin\\cpp.exe"
		}
	]
}